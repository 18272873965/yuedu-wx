.article image{
  display: block;
  width: 100%;
  /* height: 300rpx; */
}
.article .article-details{
  width: 100%;
  position: relative;
}
.article .details{
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  z-index: 1;
}
.article .details-top{
  color: #FFF;
  font-size: 44rpx;
}
.article .details-infor{
  font-size: 28rpx;
  color: rgba(255,255,255,.6);
}
.article .details-bottom{
  width: 100%;
  height: 180rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(0,0,0,0)), color-stop(1, #000));
}
.article .content{
  margin: 20rpx;
  font-size: 28rpx;
}
.article .musice{
  width: 100%;
  height: 50rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 2;
}

.article .to-p-n{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  font-size: 44rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  color: #ff6600;
}
