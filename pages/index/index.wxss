.nav{
  padding-left: 40rpx;
  padding-right: 40rpx;
  width: 750rpx;
  height: 100rpx;
  background-color: #4e4e4e;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  box-sizing: border-box;
  color: white;
}

.articles{
  width: 750rpx;
}

.articles .top{
  width: 90rpx;
  height: 90rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  position: fixed;
  bottom: 60rpx;
  right: 20rpx;
}
.articles .top image{
  width: 90rpx;
  height: 90rpx;
}

.articles-left{
  margin-bottom: 40rpx;
}

.articles .articles-left image{
  display: block;
  width: 750rpx;
  height: 300rpx;
}

.articles .bottom{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: gray;
}
.articles .title{
  font-size: 48rpxrpx;
}
.articles .content{
  color: gray;
  font-size: 24rpx;
  text-indent: 24rpx;
}